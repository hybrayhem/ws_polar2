<launch>
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find polar_description)/robots/polar_arm_hand.urdf.xacro" />

    <!-- GAZEBO arguments -->
    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="false" />

    <!--launch GAZEBO with own world configuration -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!-- <arg name="world_name" value="$(find robotics_assisted_tomography)/worlds/tomography.world"/> -->
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)" />
        <arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="headless" value="$(arg headless)" />
    </include>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model polar" />

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find polar_simulation)/config/polar_control.yaml" command="load" />


    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="joint_state_controller polar_arm_controller polar_hand_controller" />


    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />

    <!-- planning_context already launching in move_group -->
    <include file="$(find polar_moveit_config)/launch/planning_context.launch">
        <arg name="load_robot_description" value="true" />
    </include>

    <include file="$(find polar_moveit_config)/launch/move_group.launch">
    </include>

    <group if="$(arg gui)">  
        <!-- Run Rviz and load the default config to see the state of the move_group node -->
        <include file="$(find polar_moveit_config)/launch/moveit_rviz.launch">
            <arg name="rviz_config" value="$(find polar_moveit_config)/launch/moveit.rviz"/>
        </include>
    </group>

    <node name="joint_state_desired_publisher" pkg="topic_tools" type="relay" args="joint_states joint_states_desired" />

</launch>
